@model POCProject.ViewModels.ContactViewModel

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Contact</h1>

        <form method="post">
            @if (ViewBag.Message != null)
            {
                <div>
                    @ViewBag.Message
                </div>
            }

            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-muted" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-muted" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Message)
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-muted" })
            </div>
            <div class="form-group">
                <input type="submit" value="Cancel" class="btn btn-info" />
                <input type="submit" value="Send Message" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>